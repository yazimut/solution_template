# Root of project.
# Don't inherit same config files from the parent directories.
root = true

####
#### Global parameters
####
[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

####
#### EditorConfig
#### Don't modify unnecessarily!
####
[*.editorconfig]
charset = utf-8

####
#### Markdown
####
[*.{md,markdown}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false
